<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_item_user"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="1dp">

    <!-- Avatar del usuario -->
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_avatar"
        android:gravity="center"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/txtAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AG"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Información del usuario -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ana García"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ana@email.com"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/txtUserRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Administrador"
                android:textSize="12sp"
                android:background="@drawable/bg_role_admin"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtUserStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activo"
                android:textSize="12sp"
                android:background="@drawable/bg_status_active"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:textColor="@color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnEditUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            android:tint="@color/primary_color" />

        <ImageButton
            android:id="@+id/btnDeleteUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:tint="@color/error_color"
            android:layout_marginStart="4dp" />

    </LinearLayout>

</LinearLayout>