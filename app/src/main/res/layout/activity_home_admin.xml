<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <!-- MÉTRICAS RÁPIDAS -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:paddingBottom="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="12dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvUsers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usuarios"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="12dp"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvActiveUsers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activos hoy"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- SECCIÓN: TIEMPO POR CATEGORÍA -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiempo por Categoría"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="6dp"/>

                <TextView
                    android:id="@+id/tvCategorySummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sin datos aún..."
                    android:textSize="14sp"
                    android:paddingTop="6dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SECCIÓN: PRODUCTIVIDAD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Productividad"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="6dp"/>

                <TextView
                    android:id="@+id/tvProductivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargando..."
                    android:textSize="14sp"
                    android:paddingTop="6dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SECCIÓN: EQUILIBRIO -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equilibrio"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="6dp"/>

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="En proceso..."
                    android:textSize="14sp"
                    android:paddingTop="6dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
